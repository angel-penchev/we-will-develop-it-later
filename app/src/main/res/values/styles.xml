<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- General text styling for the app setup screens -->
    <style name="SetupText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <!-- Heading specific styling for the app setup screens -->
    <style name="SetupHeading" parent="SetupText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12pt</item>
    </style>

    <!-- Body specific text styling for the app setup screens -->
    <style name="SetupBodyText" parent="SetupText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">7pt</item>
    </style>

    <!-- Illustration stylesheet for setup activities -->
    <style name="SetupIllustration">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <!-- Button stylesheet for setup activities -->
    <style name="BtnSetup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtnSetupRegular" parent="BtnSetup">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BtnSetupHighlighted" parent="BtnSetup">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!-- Guideline stylesheet for setup activities -->
    <style name="HorizontalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
